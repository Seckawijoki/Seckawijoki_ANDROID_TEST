<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/my_edit_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
    <EditText
        android:id="@+id/my_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/my_edit_text_title"
        android:layout_toRightOf="@id/my_edit_text_title"
        android:hint="@string/my_edit_text_hint"
        android:inputType="text" />
    <ImageView
        android:id="@+id/my_edit_text_clear_text"
        android:src="@mipmap/ic_clear"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:contentDescription="@string/my_edit_text_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@id/my_edit_text"
        android:layout_alignRight="@id/my_edit_text" />
</RelativeLayout>
